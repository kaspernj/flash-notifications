{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "outDir": "./build",
    "sourceMap": false,
    "sourceRoot": "/src",
    "target": "ES2024"
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**/__rsc_tests__/*"]
}
